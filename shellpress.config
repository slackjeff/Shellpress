# ======================================
# CONFIGURAÇÕES GERAIS
# ======================================
## Informações básicas
export TITLE='Slackjeff'
export AUTHOR='Jefferson Carneiro'
export DOMAIN='https://slackjeff.com.br'
## Configurações de SEO
export CHARSET='UTF-8'
export LANG='pt-br'
export KEYWORDS='slackjeff,linux,shell script,open source,software livre'
export DESCRIPTION='Site pessoal com vídeos, tutoriais e projetos em Shell Script.'

# ======================================
# FUNCIONALIDADES OPCIONAIS
# ======================================
## MENU
# Define se o site deve exibir o menu principal de navegação no topo.
# Valores:
#   on  - Habilita o menu (padrão)
#   off - Remove o menu
export MENU="${MENU:-on}"

## VIDEO_PAGE
# Define se uma página dedicada aos vídeos deve ser gerada (videos.html).
# Valores:
#   on  - Gera a página de vídeos (padrão)
#   off - Não gera a página
export VIDEO_PAGE="${VIDEO_PAGE:-on}"
